source 'https://rubygems.org'

# Ruby version
ruby '3.3.0'

# Use sinatra as web framework
gem 'sinatra'

# Use rubocop to lint code
gem 'rubocop', '>= 1.0', '< 2.0'

# Use CVS to parse CSV files
gem 'csv'

# Use aws-sdk-s3 to download and upload files to S3
gem 'aws-sdk-s3'

# Use dotenv to load environment variables
gem 'dotenv'

# Use RSpec for testing
gem 'rspec'

#  Use Active Record as ORM
gem 'activerecord'

# Use sqlite3 as database
gem 'sqlite3', '~> 1.4'